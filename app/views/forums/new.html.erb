<div class="crumbs">
  <%= link_to t(:forum), root_path %> <span class="arrow">&rarr;</span>
</div>

<h1><%= t(:new_forum) %></h1>

<% form_for :forum, :url => forums_path do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag t(:create) %> or <%= link_to(t(:cancel), forums_path) %>
<% end -%>